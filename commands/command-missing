#!/usr/bin/env bash

function command_missing() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Returns success exit code if any <command> is missing.

			USAGE:
			command-exists [--] ...<command>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item commands=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			commands+=("$@")
			shift "$#"
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) commands+=("$item") ;;
		esac
	done

	# check
	if test "${#commands[@]}" -eq 0; then
		help 'No <command> was provided.'
		return 22 # EINVAL 22 Invalid argument
	fi

	# =====================================
	# Action

	local command
	for command in "${commands[@]}"; do
		if type -P "$command" &>/dev/null; then
			continue
		else
			return 0 # command missing
		fi
	done
	return 1 # all commands are present
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	command_missing "$@"
fi
