#!/usr/bin/env bash

function debug_bash() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Run a bash script with [-x] applied: Print a trace of simple commands.

			USAGE:
			debug-bash [...options] -- <command...>

			OPTIONS:
			-v
			    Pass the -v flag to bash: Print shell input lines as they are read.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item cmd=() args=('-x')
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'-v') args+=('-v') ;;
		'--')
			cmd+=("$@")
			shift "$#"
			break
			;;
		*) cmd+=("$item") ;;
		esac
	done

	# check
	if test "${#cmd[@]}" -eq 0; then
		help 'No <command> was provided.'
	fi

	# =====================================
	# Act

	bash "${args[@]}" "$(type -P "${cmd[0]}")" "${cmd[@]:1}"
	return
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	debug_bash "$@"
fi
