#!/usr/bin/env bash

# https://prettier.io/docs/en/install.html

function setup_util_prettier() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists prettier; then
		return 0
	fi

	# setup
	local options=(
		--name='Prettier'
		--cli='prettier'
		"$@"
		NODE='prettier'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_prettier "$@"
fi
