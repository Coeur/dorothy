#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/pv/filelist
# /usr/bin/pv

function setup_util_pv() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists pv; then
		return 0
	fi

	# setup
	local options=(
		--cli='pv'
		"$@"
		APT='pv' # UBUNTU
		BREW='pv'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_pv "$@"
fi
