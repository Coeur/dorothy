#!/usr/bin/env bash

function echo_after_separator() (
	source "$DOROTHY/sources/bash.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Output each input that is after the double dash separator (--)

			USAGE:
			echo-after-separator <...input>
			echo-lines <...input> | echo-after-separator

			EXAMPLE:

			echo-after-separator a b -- c d

			    c
			    d
			    # exit status: 0

			# failure case, as no separator was found
			echo-after-separator a b c d

			    # exit status: 1

		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# action
	local found='no'
	function on_input {
		if test "$1" = '--'; then
			found='yes'
		elif test "$found" = 'yes'; then
			echo_line "$1"
		fi
	}
	function on_finish {
		if test "$found" = 'no'; then
			return 1
		fi
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_after_separator "$@"
fi
