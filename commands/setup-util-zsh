#!/usr/bin/env bash

# https://zsh.sourceforge.io

# https://packages.debian.org/sid/amd64/zsh/filelist
# /bin/rzsh
# /bin/zsh
# /bin/zsh5

function setup_util_zsh() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists zsh; then
		return 0
	fi

	# https://github.com/ohmyzsh/ohmyzsh/wiki/Installing-ZSH
	local options=(
		--name='zsh'
		--cli='zsh'
		"$@"
		APK='zsh'
		APT='zsh'
		AUR='zsh'
		BREW='zsh'
		BSD='zsh'
		EMERGE='zsh'
		EOPKG='zsh'
		PORT='zsh'
		RPM='zsh'
		VOID='zsh'
		ZYPPER='zsh'
	)
	setup-util "${options[@]}"

	# https://ohmyz.sh/#install
	options=(
		--confirm
		--optional
		--name='Oh My ZSH'
		"$@"
		INSTALLER='https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_zsh "$@"
fi
