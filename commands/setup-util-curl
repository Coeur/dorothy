#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/curl/filelist
# /usr/bin/curl

function setup_util_curl() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists curl; then
		return 0
	fi

	# setup
	local options=(
		--cli='curl'
		"$@"
		APK='curl'
		APT='curl'
		AUR='curl'
		BREW='curl'
		RPM='curl'
		ZYPPER='curl'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_curl "$@"
fi
