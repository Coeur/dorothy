#!/usr/bin/env bash

function echo_escape_spaces() (
	source "$DOROTHY/sources/bash.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			For each input, escape its spaces by prepending backslashes.

			USAGE:
			echo-escape-spaces <...input>
			echo-lines <...input> | echo-escape-spaces

			EXAMPLE:

			echo-escape-spaces 'hello world'

			    hello\ world
			    # exit status: 0

			echo-lines 'hello world' | echo-escape-spaces

			    hello\ world
			    # exit status: 0

		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	function on_input {
		local value="$1"
		value="${value// /\\ }"
		printf '%s\n' "$value"
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_escape_spaces "$@"
fi
