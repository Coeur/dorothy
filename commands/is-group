#!/usr/bin/env bash

function is_group() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	# help
	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Checks if a <group> is registered as a group on the system.

			USAGE:
			is-group [--] <group>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item groups=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--group='*) groups+=("${item#*--group=}") ;;
		'--')
			groups+=("$@")
			shift $#
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) groups+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	# https://stackoverflow.com/a/36131231/130638
	# https://superuser.com/a/444218/32418
	local group
	for group in "${groups[@]}"; do
		if command-exists getent; then
			getent group "$group" &>/dev/null
		elif command-exists dscacheutil; then
			{
				dscacheutil -q group -a name "$group" | echo-or-fail
			} &>/dev/null
		else
			echo-error "$0: Unsupported OS"
			return 19 # ENODEV 19 Operation not supported by device
		fi
	done
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is_group "$@"
fi
