#!/usr/bin/env bash

function is_brew() (
	source "$DOROTHY/sources/bash.bash"

	# workaround for our [brew] helper
	if test -n "${HOMEBREW_PREFIX-}" -a -x "${HOMEBREW_PREFIX-}/bin/brew"; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is_brew "$@"
fi
