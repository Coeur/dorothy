#!/usr/bin/env bash

function setup_util_python() (
	source "$DOROTHY/sources/bash.bash"

	# python2
	# homebrew no longer offers python2, their suggestion is to use pyenv instead
	# despite docs, apk does not offer python or python2
	local options=(
		--optional
		--cli='python2'
		"$@"
		APT='python2'
		AUR='python2'
		RPM='python'
		ZYPPER='python'
	)
	setup-util "${options[@]}"

	# python3
	options=(
		--cli='python3'
		"$@"
		APK='python3'
		APT='python3'
		AUR='python3'
		BREW='python3'
		RPM='python3'
		ZYPPER='python3'
	)
	setup-util "${options[@]}"

	# pipx dependencies for linux, not macos
	if is-linux; then
		options=(
			--optional
			--name='python3-venv'
			"$@"
			APT='python3-venv'
			AUR='python-virtualenv'
			ZYPPER='python3-virtualenv'
		)
		setup-util "${options[@]}"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_python "$@"
fi
