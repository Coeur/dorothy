#!/usr/bin/env bash

function echo_before_blank() (
	source "$DOROTHY/sources/bash.bash"

	local append=''
	if [[ $1 == '--append='* ]]; then
		append="${1#*--append=}"
		shift
	fi

	# https://stackoverflow.com/a/1603436/130638
	sed -e '/^$/,$d' "$@"

	if test -n "$append"; then
		echo_string "$append"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_before_blank "$@"
fi
