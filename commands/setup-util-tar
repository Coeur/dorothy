#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/tar/filelist
# /bin/tar
# /usr/sbin/rmt-tar
# /usr/sbin/tarcat

# https://repology.org/project/tar/versions

function setup_util_tar() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists tar; then
		return 0
	fi

	# setup
	local options=(
		--cli='tar'
		"$@"
		APK='tar'
		APT='tar'
		AUR='tar'
		NIX='gnutar'
		RPM='tar'
		ZYPPER='tar'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_tar "$@"
fi
