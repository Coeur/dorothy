#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/net-tools/filelist
# /bin/netstat
# /sbin/ifconfig
# /sbin/ipmaddr
# /sbin/iptunnel
# /sbin/mii-tool
# /sbin/nameif
# /sbin/plipconfig
# /sbin/rarp
# /sbin/route
# /sbin/slattach

function setup_util_netstat() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists netstat; then
		return 0
	fi

	# setup
	local options=(
		--cli='netstat'
		"$@"
		APK='net-tools'
		APT='net-tools'
		AUR='net-tools'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_netstat "$@"
fi
