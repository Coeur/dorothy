#!/usr/bin/env bash

function echo_before_separator() (
	source "$DOROTHY/sources/bash.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Output each input that is before the double dash separator (--)

			USAGE:
			echo-before-separator <...input>
			echo-lines <...input> | echo-before-separator

			EXAMPLE:

			echo-before-separator a b -- c d

			    a
				b
			    # exit status: 0

			# failure case, as no separator was found
			echo-before-separator a b c d

			    a
				b
				c
				d
			    # exit status: 1

		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	local found='no'
	function on_input {
		if test "$1" = '--'; then
			found='yes'
			# it was found, success case, exit immediately
			exit 0
		else
			echo "$1"
		fi
	}
	function on_finish {
		if test "$found" = 'no'; then
			return 1
		fi
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_before_separator "$@"
fi
