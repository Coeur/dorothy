#!/usr/bin/env bash

function echo_numeric() (
	source "$DOROTHY/sources/bash.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Outputs inputs that are numbers, otherwise note their invalidity to stderr.
			Using [is-number] for the validation.

			USAGE:
			echo-numeric <...input>
			echo-lines <...input> | echo-numeric

			EXAMPLE:

			echo-numeric 1 2

			    1
			    2
			    # exit status: 0

			echo-numeric 1 a ''

			    1
			    [a] is not a number
			    [] is not a number
			    # exit status: 1

			echo-numeric 1 a '' 2> /dev/stderr || :

			    1
			    # exit status: 0, it was ignored due to || :

		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	local any_invalid=no

	function on_input {
		if is-number "$1"; then
			echo_line "$1"
		else
			echo-style --error="[$1] is not a number" >/dev/stderr
			any_invalid=yes
		fi
	}

	function on_finish {
		if test "$any_invalid" = yes; then
			return 22 # EINVAL 22 Invalid argument
		fi
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_numeric "$@"
fi
