#!/usr/bin/env bash

function fail() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Execute the command, ensure everything is written to stderr, and that a failure exit code is returned.

			USAGE:
			fail ...<cmd>
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item cmd=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		*)
			cmd+=("$item" "$@")
			shift "$#"
			break
			;;
		esac
	done

	# =====================================
	# Action

	local ec
	eval_capture --statusvar=ec -- "${cmd[@]}" >/dev/stderr
	if test "$ec" -eq 0; then
		return 1
	else
		return "$ec"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	fail "$@"
fi
