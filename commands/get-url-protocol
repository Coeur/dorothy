#!/usr/bin/env bash

function get_url_protocol() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Get the protocol of URL

			USAGE:
			get-url-protocol <url>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item url=''
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$url"; then
				url="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# check
	if test -z "$url"; then
		help "<url> is required"
	fi

	# =====================================
	# Dependencies

	setup-util-sd --quiet

	# =====================================
	# Action

	# act
	local result
	# trunk-ignore(shellcheck/SC2016)
	result="$(echo "$url" | sd '^([a-z]+)://.*$' '$1')"
	if test "$result" = "$url"; then
		return 1
	else
		echo "$result"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	get_url_protocol "$@"
fi
