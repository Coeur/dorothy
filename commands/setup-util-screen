#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/screen/filelist
# /usr/bin/screen

function setup_util_screen() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if test "$*" = '--quiet' && command-exists screen; then
		return 0
	fi

	# setup
	local options=(
		--cli='screen'
		"$@"
		APK='screen'
		APT='screen'
		BREW='screen'
		RPM='screen'
		ZYPPER='screen'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_screen "$@"
fi
